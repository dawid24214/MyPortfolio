  <script>
    function toggleReveal(id){
      const el = document.getElementById(id);
      if(!el) return;
      el.style.display = (el.style.display === 'none' || !el.style.display) ? 'flex' : 'none';
    }

    async function copyText(text, btn){
      try{
        await navigator.clipboard.writeText(text);
        if(btn){
          const prev = btn.textContent;
          btn.textContent = 'Skopiowano';
          setTimeout(()=> btn.textContent = prev, 1200);
        }
      }catch{
        if(btn){
          const prev = btn.textContent;
          btn.textContent = 'B≈ÇƒÖd';
          setTimeout(()=> btn.textContent = prev, 1200);
        }
      }
    }

    // helpers
    const $ = (sel, root=document) => root.querySelector(sel);
    const $$ = (sel, root=document) => Array.from(root.querySelectorAll(sel));

    $('#year').textContent = new Date().getFullYear();

    function openLink(url){
      window.open(url, '_blank', 'noopener,noreferrer');
    }

    function sendMessage(e){
      e.preventDefault();
      const data = Object.fromEntries(new FormData(e.target).entries());
      console.log('Form data:', data);
      alert('Wiadomo≈õƒá (demo) zapisana w konsoli. Pod≈ÇƒÖcz EmailJS / backend, aby wysy≈Çaƒá maile.');
      e.target.reset();
    }

    // reveal on scroll
    const io = new IntersectionObserver((entries)=>{
      for (const entry of entries){
        if (entry.isIntersecting) entry.target.classList.add('show');
      }
    }, { threshold: 0.12 });
    $$('.reveal').forEach(el => io.observe(el));

    // sidebar hide/show
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('toggleSidebar');
    const openBtn = document.getElementById('openSidebar');

    function setSidebarHidden(hidden){
      sidebar.classList.toggle('hidden', hidden);
      document.body.classList.toggle('sidebar-hidden', hidden);
      try{ localStorage.setItem('sidebarHidden', hidden ? '1' : '0'); }catch{}
    }

    // init
    try{
      const saved = localStorage.getItem('sidebarHidden');
      if (saved === '1') setSidebarHidden(true);
    }catch{}

    toggleBtn?.addEventListener('click', ()=> setSidebarHidden(!sidebar.classList.contains('hidden')));
    openBtn?.addEventListener('click', ()=> setSidebarHidden(false));
  </script>
</body>
